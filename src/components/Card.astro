---
interface Props {
  title: string;
  subtitle: string;
  body: string;
}

const { title, subtitle, body } = Astro.props;
---

<div
  data-aos="fade-in"
  data-aos-anchor-placement="bottom-bottom"
  class="Card rounded border border-[#272b22] p-4 sm:w-1/3 grow last-of-type:grow-0 sm:last-of-type:w-1/2 mx-auto"
>
  <div class="mb-4">
    <h3 class="font-bold text-3xl">{title}</h3>
    <small>{subtitle}</small>
  </div>
  <p>{body}</p>
</div>
