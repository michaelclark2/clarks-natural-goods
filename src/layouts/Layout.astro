---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <script
      type="text/partytown"
      async
      src="https://www.googletagmanager.com/gtag/js?id=G-H9GW4Q9EQV"></script>
    <script type="text/partytown">
      window.dataLayer = window.dataLayer || [];
      function gtag() {
        dataLayer.push(arguments);
      }
      gtag("js", new Date());

      gtag("config", "G-H9GW4Q9EQV");
    </script>
    <meta charset="UTF-8" />
    <meta
      name="description"
      content="Discover handcrafted soap from Clark's Natural Goods. Made with simple, holistic ingredients for sensitive skin and all skin types."
    />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <link
      rel="canonical"
      href={"https://clarksnaturalgoods.com" + Astro.url.pathname}
    />
    <link rel="icon" type="image/svg+xml" href="/favicon.ico" />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
    <link rel="manifest" href="/site.webmanifest" />
    <link rel="mask-icon" href="/safari-pinned-tab.svg" color="#5bbad5" />
    <meta name="msapplication-TileColor" content="#ffc40d" />
    <meta name="theme-color" content="#ffffd2" />

    <!-- Facebook Meta Tags -->
    <meta property="og:url" content="https://clarksnaturalgoods.com" />
    <meta property="og:type" content="website" />
    <meta property="og:title" content="Clark's Natural Goods" />
    <meta
      property="og:description"
      content="Discover handcrafted soap from Clark's Natural Goods. Made with simple, holistic ingredients for sensitive skin and all skin types."
    />
    <meta property="og:image" content="/ogImage.png" />

    <!-- Twitter Meta Tags -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta property="twitter:domain" content="clarksnaturalgoods.com" />
    <meta property="twitter:url" content="https://clarksnaturalgoods.com" />
    <meta name="twitter:title" content="Clark's Natural Goods" />
    <meta
      name="twitter:description"
      content="Discover handcrafted soap from Clark's Natural Goods. Made with simple, holistic ingredients for sensitive skin and all skin types."
    />
    <meta name="twitter:image" content="/ogImage.png" />

    <title>{title}</title>
  </head>

  <body class="bg-amber-50">
    <slot />
  </body>
</html>
<style is:global>
  :root {
    --accent: 136, 58, 234;
    --accent-light: 224, 204, 250;
    --accent-dark: 49, 10, 101;
    --accent-gradient: linear-gradient(
      45deg,
      rgb(var(--accent)),
      rgb(var(--accent-light)) 30%,
      white 60%
    );
  }
</style>
